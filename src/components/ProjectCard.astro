---
export interface Props {
  title: string;
  desc: string;
  image: string;
  link: string;
  class?: string;
}

const { title, desc, image, link, class: className } = Astro.props;
---

<a
  href={link}
  class={`group relative block w-full transition-all hover:opacity-100 ${className}`}
>
  <div class="flex flex-row gap-4 lg:flex-col lg:gap-0">
    <div
      class="relative shrink-0 w-32 h-20 sm:w-40 sm:h-24 lg:w-full lg:h-auto lg:aspect-video overflow-hidden rounded-lg shadow-md border border-white/10 bg-gray-800"
    >
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      />
    </div>

    <div class="flex flex-col justify-center lg:mt-4 lg:text-center">
      <h4
        class="text-base font-bold text-gray-100 group-hover:text-accent transition-colors lg:text-lg"
      >
        {title}
      </h4>
      <p
        class="text-xs text-gray-400 mt-1 line-clamp-2 leading-relaxed lg:text-sm lg:mt-2"
      >
        {desc}
      </p>

      <span class="mt-2 text-xs text-accent font-medium lg:hidden">
        View Project &rarr;
      </span>
    </div>
  </div>
</a>
