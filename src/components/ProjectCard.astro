---
export interface Props {
  title: string;
  desc: string;
  image: string;
  link: string;
  class?: string;
}

const { title, desc, image, link, class: className } = Astro.props;
---

<a href={link} class={`group relative block ${className}`}>
  <div
    class="w-full aspect-video relative overflow-hidden bg-surface-dark border border-white/10 group-hover:border-accent transition-colors duration-300"
  >
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover cut-corner opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all duration-500"
    />

    <div
      class="absolute inset-0 bg-[linear-gradient(transparent_50%,rgba(0,0,0,0.5)_50%)] bg-size[100%_4px] pointer-events-none opacity-20"
    >
    </div>
  </div>

  <div class="flex flex-col gap-1 mt-4 px-2">
    <h3
      class="text-lg font-bold font-mono text-gray-100 group-hover:text-accent transition-colors flex items-center gap-2"
    >
      {title}
    </h3>

    <p class="text-sm text-gray-400 leading-relaxed line-clamp-2">
      {desc}
    </p>
  </div>

  <div class="absolute top-0 right-0 p-1 pointer-events-none">
    <div
      class="w-2 h-2 border-t border-r border-accent opacity-0 group-hover:opacity-100 transition-opacity"
    >
    </div>
  </div>
</a>
