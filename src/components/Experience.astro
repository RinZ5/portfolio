---
import { experience } from "../data/experience";
---

<section class="mb-6 sm:mb-8">
  <h3
    class="text-lg sm:text-xl font-bold underline decoration-4 decoration-gray-500 underline-offset-4 mb-3 sm:mb-4"
  >
    Experience
  </h3>

  <div class="flex flex-col gap-2">
    {
      experience.map((item) => (
        <div class="grid grid-cols-[3.5rem_1fr] sm:grid-cols-[5rem_1fr] items-baseline gap-1">
          <span class="font-bold text-sm sm:text-base text-gray-200">
            {item.year}
          </span>

          <span class="text-sm sm:text-base text-gray-400">
            {item.description}
          </span>
        </div>
      ))
    }
  </div>
</section>
