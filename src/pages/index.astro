---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
import Experience from "../components/Experience.astro";

import { SITE } from "../config";
---

<Layout title="Supawit Promma">
  <div
    class="flex flex-col lg:flex-row items-center justify-between gap-4 mb-8 sm:mb-10"
  >
    <div class="text-center sm:text-left w-full lg:w-auto">
      <h2 class="text-2xl sm:text-3xl font-bold">{SITE.NAME}</h2>
      <p class="text-sm sm:text-base">
        {SITE.ROLE}
      </p>
    </div>
  </div>

  <Project />

  <Experience />
</Layout>
